# =============================================================================
# OCI CENTRALIZED TERRAFORM CONTROLLER
# =============================================================================
# Simplified orchestrator focusing on:
# - Dynamic service detection
# - Unified execution (no duplicate init)
# - Enhanced PR comments
# - Error aggregation
# =============================================================================

name: ğŸ¯ OCI Centralized Controller

run-name: "OCI Deploy [${{ github.event_name }}] â†’ ${{ github.ref_name }} by @${{ github.actor }}"

on:
  push:
    branches:
      - Dev
      - Staging
      - Production
  
  pull_request:
    types: [opened, synchronize, reopened]
  
  workflow_dispatch:
    inputs:
      action:
        description: 'Action to perform'
        required: true
        type: choice
        options:
          - plan
          - apply
        default: 'plan'

permissions:
  contents: read
  pull-requests: write
  issues: write

env:
  TERRAFORM_VERSION: '1.5.6'
  PYTHON_VERSION: '3.11'

jobs:
  oci-controller:
    name: ğŸš€ OCI Deployment Orchestrator
    runs-on: ubuntu-latest
    
    steps:
      # =========================================================================
      # SETUP
      # =========================================================================
      
      - name: ğŸ“‹ Event Details
        run: |
          echo "â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•"
          echo "ğŸ¯ OCI CENTRALIZED CONTROLLER"
          echo "â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•"
          echo "ğŸ“¦ Repository: ${{ github.repository }}"
          echo "ğŸŒ¿ Branch: ${{ github.ref_name }}"
          echo "ğŸ“ Commit: ${{ github.sha }}"
          echo "ğŸ‘¤ Actor: ${{ github.actor }}"
          echo "ğŸ”” Event: ${{ github.event_name }}"
          
          if [[ "${{ github.event_name }}" == "pull_request" ]]; then
            echo "ğŸ” PR #${{ github.event.pull_request.number }}: ${{ github.event.pull_request.title }}"
            echo "ğŸ¯ Action: PLAN (validation)"
          elif [[ "${{ github.event_name }}" == "push" ]]; then
            echo "ğŸš€ Action: APPLY (deployment)"
          else
            echo "ğŸ¯ Action: ${{ inputs.action || 'plan' }}"
          fi
          echo "â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•"
      
      - name: ğŸ“¥ Checkout Repository
        uses: actions/checkout@v4
        with:
          fetch-depth: 0  # Full history for git diff
      
      # =========================================================================
      # AUTHENTICATION
      # =========================================================================
      
      - name: ğŸ” Configure OCI CLI
        run: |
          echo "ğŸ”§ Setting up OCI CLI configuration..."
          mkdir -p ~/.oci
          
          # Write OCI config file
          cat > ~/.oci/config << EOF
          [DEFAULT]
          user=${{ secrets.OCI_USER }}
          fingerprint=${{ secrets.OCI_FINGERPRINT }}
          tenancy=${{ secrets.OCI_TENANCY }}
          region=${{ secrets.OCI_REGION }}
          key_file=~/.oci/oci_api_key.pem
          EOF
          
          # Write OCI private key
          echo "${{ secrets.OCI_PRIVATE_KEY }}" > ~/.oci/oci_api_key.pem
          chmod 600 ~/.oci/oci_api_key.pem
          
          # Set environment variables for terraform
          echo "TF_VAR_tenancy_ocid=${{ secrets.OCI_TENANCY }}" >> $GITHUB_ENV
          echo "TF_VAR_user_ocid=${{ secrets.OCI_USER }}" >> $GITHUB_ENV
          echo "TF_VAR_region=${{ secrets.OCI_REGION }}" >> $GITHUB_ENV
          echo "TF_VAR_fingerprint=${{ secrets.OCI_FINGERPRINT }}" >> $GITHUB_ENV
          echo "TF_VAR_private_key_path=$HOME/.oci/oci_api_key.pem" >> $GITHUB_ENV
          
          # Export for orchestrator script
          echo "OCI_CLI_USER=${{ secrets.OCI_USER }}" >> $GITHUB_ENV
          echo "OCI_CLI_TENANCY=${{ secrets.OCI_TENANCY }}" >> $GITHUB_ENV
          echo "OCI_CLI_REGION=${{ secrets.OCI_REGION }}" >> $GITHUB_ENV
          
          echo "âœ… OCI CLI configured"
      
      - name: ğŸ” Configure AWS Credentials (for state backend)
        uses: aws-actions/configure-aws-credentials@v4
        with:
          role-to-assume: ${{ secrets.AWS_ROLE_ARN }}
          aws-region: ${{ secrets.AWS_REGION }}
          role-session-name: oci-terraform-controller
      
      # =========================================================================
      # TOOLS INSTALLATION
      # =========================================================================
      
      - name: ğŸ Setup Python
        uses: actions/setup-python@v5
        with:
          python-version: ${{ env.PYTHON_VERSION }}
          cache: 'pip'
      
      - name: ğŸ“¦ Install Python Dependencies
        run: |
          echo "ğŸ“¦ Installing orchestrator dependencies..."
          pip install -r scripts/requirements.txt
          echo "âœ… Dependencies installed"
      
      - name: ğŸ”§ Setup Terraform
        uses: hashicorp/setup-terraform@v3
        with:
          terraform_version: ${{ env.TERRAFORM_VERSION }}
      
      - name: ğŸ” Verify Tools
        run: |
          echo "ğŸ” Verifying installed tools..."
          echo "Python: $(python --version)"
          echo "Terraform: $(terraform version)"
          echo "Git: $(git --version)"
          echo "AWS CLI: $(aws --version)"
      
      # =========================================================================
      # TERRAFORM ORCHESTRATION
      # =========================================================================
      
      - name: ğŸ¯ Run OCI Terraform Orchestrator
        id: orchestrator
        run: |
          echo "ğŸš€ Starting OCI Terraform Orchestrator..."
          
          # Determine action
          if [[ "${{ github.event_name }}" == "pull_request" ]]; then
            ACTION="plan"
          elif [[ "${{ github.event_name }}" == "push" ]]; then
            ACTION="apply"
          else
            ACTION="${{ inputs.action }}"
          fi
          
          echo "Action: $ACTION"
          
          # Set base ref for git diff
          if [[ "${{ github.event_name }}" == "pull_request" ]]; then
            BASE_REF="${{ github.base_ref }}"
          else
            BASE_REF="main"
          fi
          
          echo "Base ref: $BASE_REF"
          
          # Run orchestrator
          python scripts/oci-terraform-orchestrator.py \
            --action "$ACTION" \
            --working-dir "${{ github.workspace }}/toronto" \
            --base-ref "$BASE_REF" \
            --region "${{ secrets.OCI_REGION }}" \
            --debug
          
          ORCHESTRATOR_EXIT_CODE=$?
          echo "exit_code=$ORCHESTRATOR_EXIT_CODE" >> $GITHUB_OUTPUT
          
          if [ $ORCHESTRATOR_EXIT_CODE -ne 0 ]; then
            echo "âŒ Orchestrator failed with exit code $ORCHESTRATOR_EXIT_CODE"
            exit $ORCHESTRATOR_EXIT_CODE
          fi
          
          echo "âœ… Orchestrator completed successfully"
      
      # =========================================================================
      # PR COMMENT
      # =========================================================================
      
      - name: ğŸ’¬ Post PR Comment
        if: github.event_name == 'pull_request' && always()
        uses: actions/github-script@v7
        with:
          github-token: ${{ secrets.GITHUB_TOKEN }}
          script: |
            const fs = require('fs');
            
            // Read results file
            let comment = '';
            try {
              comment = fs.readFileSync('terraform-results.md', 'utf8');
            } catch (error) {
              comment = `## âŒ Orchestrator Error\n\nFailed to generate results. Check workflow logs for details.\n\nError: ${error.message}`;
            }
            
            // Add workflow run link
            const runUrl = `https://github.com/${context.repo.owner}/${context.repo.repo}/actions/runs/${context.runId}`;
            comment += `\n\n---\nğŸ”— [View Workflow Run](${runUrl})`;
            
            // Post comment
            await github.rest.issues.createComment({
              issue_number: context.issue.number,
              owner: context.repo.owner,
              repo: context.repo.repo,
              body: comment
            });
      
      # =========================================================================
      # ARTIFACTS
      # =========================================================================
      
      - name: ğŸ“¤ Upload Results
        if: always()
        uses: actions/upload-artifact@v4
        with:
          name: terraform-results-${{ github.run_number }}
          path: |
            terraform-results.md
            terraform-audit.json
          retention-days: 30
      
      # =========================================================================
      # FINAL STATUS
      # =========================================================================
      
      - name: ğŸ¯ Final Status
        if: always()
        run: |
          echo "â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•"
          if [[ "${{ steps.orchestrator.outputs.exit_code }}" == "0" ]]; then
            echo "âœ… OCI DEPLOYMENT SUCCESSFUL"
          else
            echo "âŒ OCI DEPLOYMENT FAILED"
            echo "Exit code: ${{ steps.orchestrator.outputs.exit_code }}"
          fi
          echo "â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•"
